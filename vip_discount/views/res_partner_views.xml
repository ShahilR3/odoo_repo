<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.inherit.name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='sales_purchases']//group[@name='sale']" position="inside">
                <field name="is_vip"/>
                <field name="vip_discount" invisible="is_vip != True"/>
            </xpath>
        </field>
    </record>
</odoo>