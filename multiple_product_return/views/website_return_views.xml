<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_return_list_view" model="ir.ui.view">
        <field name="name">website_return_list</field>
        <field name="model">website.return</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="partner_id"/>
                <field name="create_date"/>
                <field name="user_id"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>
    <record id="website_return_form_view" model="ir.ui.view">
        <field name="name">website_return_form</field>
        <field name="model">website.return</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="action_confirm" class="btn-primary" string="Confirm"
                            invisible="state == 'return'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,return"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_picking" type="object"
                                class="oe_stat_button fa-solid" icon="fa-pencil-square-o"
                                invisible="state != 'return'">
                            <span>Return</span>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="sale_order_id"/>
                            <field name="partner_id" readonly="state!='draft'"/>
                        </group>
                        <group>
                            <field name="create_date" string="Create Date"/>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="order_line_ids" id="property_line_template" readonly="True">
                                <list>
                                    <field name="product_id"/>
                                    <field name="delivered_qty"/>
                                    <field name="return_qty"/>
                                    <field name="reason"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <record id="action_website_return" model="ir.actions.act_window">
        <field name="name">Return</field>
        <field name="res_model">website.return</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
        (ref('website_return_list_view'), 'list'),
        (ref('website_return_form_view'), 'form')]"/>
    </record>
    <menuitem name="Sale Return" id="sale_return"
              action="action_website_return"
              parent="sale.sale_menu_root"/>
</odoo>