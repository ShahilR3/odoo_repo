<odoo>
    <template id="return_order_template" name="Return Order Modal">
        <div class="modal fade" id="returnOrderModal" tabindex="-1" aria-labelledby="returnOrderModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="returnOrderModalLabel">Sales Return</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"/>
                    </div>
                    <div class="modal-body">
                        <form action="/webform/submit" method="POST" enctype="multipart/form-data">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="order_id" t-att-value="order.id"/>
                            <div class="table-responsive">
                                <table class="table table-bordered mt-3">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th>Quantity Available</th>
                                            <th>Return Quantity</th>
                                            <th>Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="order.order_line" t-as="line">
                                            <tr>
                                                <td>
                                                    <t t-esc="line.product_id.name"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.qty_delivered" name="draco"/>
                                                </td>
                                                <td>
                                                    <input type="number"
                                                           class="form-control"
                                                           t-att-name="'return_qty_%s' % line.id"
                                                           min="0"
                                                           t-att-max="line.qty_delivered"
                                                           step="1"
                                                           value="0"/>
                                                </td>
                                                <td>
                                                    <input type="text"
                                                           class="form-control"
                                                           t-att-name="'return_reason_%s' % line.id"
                                                           placeholder="Reason"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                            <div class="mt-3 text-end">
                                <button type="submit" class="btn btn-success">Submit Return</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </template>
</odoo>
