<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="partner_line_extension" t-inherit="point_of_sale.PartnerLine" t-inherit-mode="extension">
        <xpath expr="//td[@class='partner-line-email ']" position="after">
            <td class="custom-fields">
                <t t-if="props.partner.max_limit">
                    <span>Yes</span>
                </t>
                <t t-else="">
                    <span>No</span>
                </t>
            </td>
            <td>
                <t t-if="props.partner.max_limit == true">
                    <t t-esc="props.partner.payment_limit" />
                </t>
            </td>
        </xpath>
    </t>
</templates>
