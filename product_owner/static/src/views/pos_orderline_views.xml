<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="product_owner.OrderlinePatch" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[contains(@class, 'product-name')]" position="inside">
            <div class="product-owner-name">
                <t t-if="line.productOwnerName != ' ' ">
                    Owner: <span t-esc="line.productOwnerName"/>
                </t>
            </div>
        </xpath>
    </t>
</templates>