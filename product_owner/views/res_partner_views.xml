<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_pos_form" model="ir.ui.view">
        <field name="name">res.partner.inherit.name</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='sales_purchases']//group[@name='purchase']" position="inside">
                <field name="max_limit"/>
                <field name="payment_limit" invisible="max_limit==False" widget="monetary"
                       currency_field="currency_id"/>
            </xpath>
        </field>
    </record>
</odoo>