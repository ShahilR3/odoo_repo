<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payment_provider_form_razor" model="ir.ui.view">
        <field name="name">Razor Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook//page[@name='credentials']" position="inside">
                <group name="razor_credentials" invisible="code!='draco'">
                    <field name="razor_key_id"
                           string="Key Id"
                           required="code == 'draco' and state != 'disabled'"/>
                    <field name="razor_key_secret"
                           string="Key Secret"
                           required="code == 'draco' and state != 'disabled'"
                           password="True"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
