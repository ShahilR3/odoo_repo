<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_view_form" model="ir.ui.view">
        <field name="name">account.view.move.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_request_cancel']" position="after">
                <button name="action_create_purchase_order" type="object" string="Create PO"
                        invisible="move_type != 'in_invoice' or state !='draft'"/>
            </xpath>
        </field>
    </record>
</odoo>