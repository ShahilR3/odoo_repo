<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="property_facility_list_view" model="ir.ui.view">
        <field name="name">property.facilities</field>
        <field name="model">property.facility</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="colors" widget="color_picker"/>
            </list>
        </field>
    </record>
    <record id="property_facility_form_view" model="ir.ui.view">
        <field name="name">property.facilities</field>
        <field name="model">property.facility</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_property_facility" model="ir.actions.act_window">
        <field name="name">Property Facilities</field>
        <field name="res_model">property.facility</field>
        <field name="view_mode">list,form</field>
        <field name="views" eval="[
            (ref('property_facility_list_view'), 'list'),
            (ref('property_facility_form_view'), 'form'),
        ]"/>
    </record>
</odoo>