<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="confirm_template" model="mail.template">
        <field name="name">EMAIL TEMPLATE NAME</field>
        <field name="model_id" ref="model_property_rent_lease"/>
        <field name="subject">Regarding your Property Purchase</field>
        <field name="email_from">{{object.user_id.email}}</field>
        <field name="email_to">{{object.tenant_id.email}}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear
                    <t t-out="object.tenant_id.name or ''"/>,
                    <br/>
                    <br/>
                    This is to inform you that your Property Purchase is Confirmed!
                    <br/>
                    <br/>
                    <t t-out="object.user_id.name or ''"/>
                    <br/>
                    <br/>
                </p>
            </div>
        </field>
    </record>
