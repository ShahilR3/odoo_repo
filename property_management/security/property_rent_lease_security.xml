<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="property_management_user_company_rule" model="ir.rule">
        <field name="name">Property Users</field>
        <field name="model_id" ref="model_property_rent_lease"/>
        <field name="domain_force">
            [('company_id', 'in', user.company_ids.ids)]
        </field>
        <field name="groups" eval="[(4, ref('property_management.property_management_user'))]"/>
    </record>
    <record id="property_management_manager_company_rule" model="ir.rule">
        <field name="name">Property Managers</field>
        <field name="model_id" ref="model_property_rent_lease"/>
        <field name="domain_force">
            [('company_id', 'in', user.company_ids.ids)]
        </field>
        <field name="groups" eval="[(4, ref('property_management.property_management_manager'))]"/>
    </record>
    <record id="property_rent_lease_portal_rule" model="ir.rule">
        <field name="name">Portal: Own Rent Leases</field>
        <field name="model_id" ref="model_property_rent_lease"/>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="domain_force">[('tenant_id', '=', user.partner_id.id)]</field>
        <field name="perm_read" eval="1"/>
    </record>
</odoo>