<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="hide_menu_record_rule" model="ir.rule">
        <field name="name">Hiding menu from users</field>
        <field name="model_id" ref="base.model_ir_ui_menu"/>
        <field name="domain_force">
            [('hide_users_ids', 'not in', [user.id])]
        </field>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
</odoo>