<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="action_estate_property_offer" model="ir.actions.act_window">
            <field name="name">Property</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form,kanban</field>
        </record>

        <record id="estate_property_offer_list_edit" model="ir.ui.view">
            <field name="name">estate.property.offer.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list editable = "bottom" decoration-success = "status == 'accept'" decoration-danger="status == 'refuse'">
                    <field name="price"/>
                    <field name ="property_id"/>
                    <field name="partner_id"/>
                    <field name = "val_date"/>
                    <field name = "dead_line"/>
                    <button name = "tick" icon = 'fa-check' type = 'object' title = 'accept' invisible = "status"/>
                    <button name = "wrong" icon = 'fa-close' type = 'object' title = 'reject' invisible = "status"/>
                    <field name="status" invisible = "True"/>
                </list>
            </field>
        </record>
        <record id="estate_property_offer_form_edit" model="ir.ui.view">
            <field name="name">estate.property.offer.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name = "price"/>
                                <field name = "partner_id"/>
                                <field name = "val_date"/>
                                <field name = "dead_line"/>
                                <field name = "status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
</odoo>