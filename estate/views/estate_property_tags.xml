<odoo>
    <data>
        <record id ="action_estate_property_tags" model ="ir.actions.act_window">
            <field name = "name">Property Tags</field>
            <field name="res_model">estate.property.tags</field>
            <field name="view_mode">list,form</field>
        </record>
        <record id="estate_property_tags_list_edit" model="ir.ui.view">
            <field name="name">estate.property.tags.list</field>
            <field name="model">estate.property.tags</field>
            <field name="arch" type="xml">
                <list editable = "bottom">
                    <field name="name"/>
                    <field name ="colors"/>
                </list>
            </field>
        </record>
        <record id="estate_property_tag_form" model="ir.ui.view">
            <field name="name">estate.property.type.form</field>
            <field name="model">estate.property.tags</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <field name = "colors"/>
                        </group>
                        <notebook>
                            <page string = "Details">
                                <field name="tag_ids" readonly = "True">
                                    <list>
                                        <field name="name"/>
                                        <field name="state"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
