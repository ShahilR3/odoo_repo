<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="quality_alert_list_view" model="ir.ui.view">
        <field name="name">quality_alert_list</field>
        <field name="model">quality.alert</field>
        <field name="arch" type="xml">
            <list>
                <field name="source_name"/>
                <field name="product_id"/>
                <field name="assigned_id"/>
            </list>
        </field>
    </record>
    <record id="quality_alert_form_view" model="ir.ui.view">
        <field name="name">quality_alert_form</field>
        <field name="model">quality.alert</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" type="object" string="Validate" class="oe_highlight"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="create_uid"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="source_name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Test">
                            <field name="quality_alert_line_ids">
                                <list editable="bottom">
                                    <field name="quality_name"/>
                                    <field name="assigned_id"/>
                                    <field name="quantity_result"/>
                                    <field name="quality_result"/>
                                    <field name="result"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_quality_alert" model="ir.actions.act_window">
        <field name="name">Quality alert</field>
        <field name="res_model">quality.alert</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
        (ref('quality_alert_list_view'), 'list'),
        (ref('quality_alert_form_view'), 'form')]"/>
    </record>
</odoo>