<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.inherit.name</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='send_by_email_primary']" position="before">
                <button name="action_project" type="object" string="Create Project"
                        invisible="vanish or state!='sale'"/>
                <button name="action_update" type="object" string="Update"
                        invisible="not vanish"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_project"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-puzzle-piece" string="Project" invisible="not vanish"/>
            </xpath>
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/list/field[@id='milestone']"
                   position="after">
                <field name="milestone"/>
            </xpath>
        </field>
    </record>
</odoo>