<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="sales_dashboard.SaleDashboard">
        <div class="o_dashboard"
             style="max-height:100%; padding:20px; background:#2E2E3A; overflow-y:100%; overflow-x:hidden;">
            <div class="o_control_panel d-flex flex-column gap-3 px-3 pt-2 pb-3"
                 data-command-category="actions"
                 style="background: #2E2E3A;">
                <div class="o_control_panel_main d-flex flex-wrap">
                    <div class="o_control_panel_breadcrumbs d-flex align-items-center gap-1 order-0">
                        <div class="o_control_panel_main_buttons d-flex gap-1 d-empty-none d-print-none">
                            <div class="d-inline-flex gap-1"></div>
                        </div>
                        <div class="o_breadcrumb d-flex gap-1 text-truncate">
                            <div class="o_last_breadcrumb_item active d-flex min-w-0 align-items-center">
                                <h3 class="min-w-0 text-truncate" style="color: white;">Dashboards</h3>
                            </div>
                            <div class="o_control_panel_breadcrumbs_actions d-inline-flex d-print-none"/>
                        </div>
                        <div class="me-auto"/>
                    </div>
                    <div class="o_control_panel_actions d-flex align-items-center">
                        <div>
                            <div class="d-flex" title="Period">
                                <div>
                                    <select id="period" class="o_input" required="required" style="color: white;">
                                        <option style="color:black;" value="">Select period...</option>
                                        <option style="color:black;" value="year_to_date">Year to Date</option>
                                        <option style="color:black;" value="last_week">Last 7 Days</option>
                                        <option style="color:black;" value="last_month">Last 30 Days</option>
                                        <option style="color:black;" value="last_three_months">Last 90 Days</option>
                                        <option style="color:black;" value="last_six_months">Last 180 Days</option>
                                        <option style="color:black;" value="last_year">Last 365 Days</option>
                                        <option style="color:black;" value="last_three_years">Last 3 Years</option>
                                    </select>
                                </div>
                                <i class="fa fa-times btn btn-link o_side_panel_filter_icon ms-1 mt-1"
                                   title="Clear"
                                   t-on-click="onClear"
                                   style="color: gold;"/>
                            </div>
                        </div>
                        <div>
                            <div class="d-flex align-items-start" title="Country" style="margin-left:20px;">
                                <span>
                                    <div class="o_input d-flex flex-wrap gap-1 o_multi_record_selector">
                                        <div class="o-autocomplete o_record_autocomplete_with_caret flex-grow-1 dropdown">
                                            <select class="border-0" style="color:white;" id="country"
                                                    t-model="state.selected" placeholder="Country"
                                                    t-on-change="onChangeCountry">
                                                <option style="color:black;" value="">Country</option>
                                                <t t-foreach="state.countries" t-as="country" t-key="country">
                                                  <option style="color:black;" t-att-value="country" t-esc="country"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </span>
                            </div>
                        </div>
                        <div>
                            <div class="d-flex align-items-start" title="Category" style="margin-left:20px;">
                                <span>
                                    <div class="o_input d-flex flex-wrap gap-1 o_multi_record_selector">
                                        <div class="o-autocomplete o_record_autocomplete_with_caret flex-grow-1 dropdown">
                                            <select class="border-0" style="color:white;" id="category"
                                                    t-model="category.selected" placeholder="Category"
                                                    t-on-change="onChangeCategory">
                                                <option style="color:black;" value="">Category</option>
                                                <t t-foreach="category.categories" t-as="category" t-key="category">
                                                  <option style="color:black;" t-att-value="category" t-esc="category"/>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                </span>
                            </div>
                        </div>
                        <div style="margin-right: 20px; margin-left:20px;">
                            <button id="btn-apply" t-on-click="onClickApply" value="apply"
                                    class="btn btn-sm btn-primary">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
            <hr style="color:gold;"/>
            <h2 style="color:white; text-align:center; bold:1">Sales Dashboard</h2>
            <div class="row mb-4 g-4" style="text-align:center;">
                <div class="col-md-4">
                    <div class="card shadow-5 border-0 rounded-3 text-white" style="background:#1cc88a;">
                        <div class="card-body">
                            <h6 class="text-uppercase small">Quotations</h6>
                            <h2>
                                <input id="quote" readonly="true"
                                       class="border-0 bg-transparent text-white" style="text-align:center;"/>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 rounded-3" style="background:#4e73df;">
                        <div class="card-body">
                            <h6 class="text-uppercase small">Revenue</h6>
                            <h2 class="fw-bold">
                                <input id="rev" readonly="true" class="border-0 bg-transparent text-white text-center"/>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 rounded-3 text-white" style="background:#36b9cc;">
                        <div class="card-body">
                            <h6 class="text-uppercase small">Expected Revenue</h6>
                            <h2 class="fw-bold">
                                <input id="exrev" readonly="true"
                                       class="border-0 bg-transparent text-white text-center"/>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4 g-4">
                <div class="col-md-8">
                    <div class="card shadow-sm border-0 rounded-3"
                         style="background: #1E1E2F; box-shadow: 0 0 30px rgba(0,0,0,0.8); color:white;">
                        <div class="card-header fw-bold" style="text-align:center;">
                            Sales by Category
                            <div style="float: right; color:white;">
                                <select id="btn-change" t-on-change="onSelectChange"
                                        class="form-select form-select-sm w-auto bg-primary text-white">
                                    <option value="lowest" class="text-dark">Lowest</option>
                                    <option value="highest" class="text-dark">Highest</option>
                            </select>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="ls_product" style="width:100%; height:300px; color:white;"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm border-0 rounded-3"
                         style="background: #1E1E2F; box-shadow: 0 0 30px rgba(0,0,0,0.8); color:white;">
                        <div class="card-header fw-bold" style="text-align:center">
                            Sales Trend
                            <div style="float: right;">
                                <button id="btn-order" t-on-click="onClickTeam" value="product"
                                        class="btn btn-sm btn-primary me-2">Product</button>
                                <button id="btn-order" t-on-click="onClickTeam" value="amount"
                                        class="btn btn-sm btn-outline-primary">Amount</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="sales" style="width:100%; height:300px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-4 g-4">
                <div class="col-md-4">
                    <div style="display: flex; flex-direction: column; align-items: center; color: white;">
                        <div>
                            Sales Person
                        </div>
                        <canvas id="sales_person" style="width: 100%; max-height: 95%;"></canvas>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card shadow-sm border-0 rounded-3"
                         style="background: #1E1E2F; box-shadow: 0 0 30px rgba(0,0,0,0.8); color:white;">
                        <div class="card-header fw-bold" style="text-align:center;">
                            States
                            <div style="float:right;">
                                <button id="btn-order" t-on-click="onClickBtn" value="invoice"
                                        class="btn btn-sm btn-primary me-2">Invoice</button>
                                <button id="btn-order" t-on-click="onClickBtn" value="order"
                                        class="btn btn-sm btn-outline-primary">Order</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="os" style="width:100%; height:250px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row g-4">
                <div class="col-md-12">
                    <div class="card shadow-sm border-0 rounded-3"
                         style="background: #1E1E2F; box-shadow: 0 0 30px rgba(0,0,0,0.8); color:white;">
                        <div class="card-header fw-bold" style="text-align:center;">
                            Top 10 Customers
                            <div style="float: right;">
                                <button id="btn-order" t-on-click="onClickCus" value="product"
                                        class="btn btn-sm btn-primary me-2">Product</button>
                                <button id="btn-order" t-on-click="onClickCus" value="amount"
                                        class="btn btn-sm btn-outline-primary">Amount</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <canvas id="top_cus" style="width:100%; height:300px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
