<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale.order.move.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="currency_select_id"/>
                <field name="currency_convert_amount" widget="monetary"
                       options="{'currency_field':'currency_select_id'}" invisible="not currency_select_id"/>
            </xpath>
        </field>
    </record>
</odoo>